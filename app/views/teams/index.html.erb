<div class="container">
	<h2>Listing teams</h2>
	<table class="table">
		<thead class="thead thead-default">
			<tr>
				<th>Name</th>
				<th>Player 1</th>
				<th>Player 2</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			<% @teams.each do |team| %>
			<tr>
				<td><%= team.name %></td>
				<td><%= team.team_players.first.user.full_name %></td>
				<td>
					<%= team.team_players.second.present? ? team.team_players.second.user.full_name : "" %>
				</td>
				<td><%= link_to "Edit", edit_team_path(team), class: "btn btn-secondary" %></td>
				<td><%= link_to "Delete", team, method: :delete, data: { confirm: "Are you sure?" } %></td>
			</tr>
			<% end %>
		</tbody>	
	</table>
</div>