<%= form_for team do |f| %>
  <%= error_messages!(team) %>
	<div class="form-group">
		<%= f.label :name, class: 'form-controll-label' %>
	  <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
  	<%= f.label :player1, class: 'form-controll-label' %>
  	<%= f.collection_select(:player1_id, @users, :id, :first_name, { :prompt => "Select player one"}, {class: "form-control"} )%>
  </div>
  <div class="form-group">
  	<%= f.label :player2, class: 'form-controll-label' %>
  	<%= f.collection_select(:player2_id, @users, :id, :first_name, { :include_blank => "Leave blank if play solo" }, {class: "form-control"} )%>
  </div>
  <div class="form-group">
  	<%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>