<div class="container">
	<h2>Listing users</h2>
	<table class="table">
		<thead class="thead thead-default">
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= link_to "Edit", edit_user_path(user), class: "btn btn-secondary" %></td>
				<td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
			</tr>
			<% end %>
		</tbody>	
	</table>
</div>